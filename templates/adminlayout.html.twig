<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/assets/css/main.css" rel="stylesheet">
    <title>Admin | {{ pageTitle }}</title>
</head>

<body class="admin">
    {% block body %}

        <!-- Top header -->
        {% include 'template-parts/admin/admin-top-header.part.twig' %}

        <!-- Header -->
        {% include 'template-parts/admin/admin-header.part.twig' %}

        <!-- Main content -->
        <div id="site-background" class="container-fluid p-0">
            <main id="main-content" class="container px-4 py-3 shadow">
                {{ notificationDisplay() }}

                {% block content %}
                {% endblock content %}
            </main>
        </div>

        <!-- Footer -->
        {% include 'template-parts/admin/admin-footer.part.twig' %}

    {% endblock body %}

    <script src="/assets/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
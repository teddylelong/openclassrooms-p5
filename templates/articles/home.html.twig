{% extends 'layout.html.twig' %}

{% block intro %}

    <div id="intro" class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6 p-4 p-md-0 intro-img">
                <img src="/assets/img/teddy.jpg" width="320" class="d-block mx-auto my-4 rounded-circle shadow img-fluid">
            </div>
            <div class="col-12 col-md-6 p-4 p-md-0 intro-text">
                <h1 class="fs-1">Bienvenue !</h1>
                <p class="fs-4">Je suis Teddy Lelong, développeur web PHP <span class="text-secondary">&lt;/&gt;</span></p>
            </div>
        </div>
    </div>

{% endblock intro %}

{% block content %}

    <h2 class="h4 mb-3">Découvrez mes derniers articles !</h2>

    <div id="articles-container" class="row row-cols-1 row-cols-md-2 g-3">
        {% for post in posts %}
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h3 class="card-title h5">{{ post.title }}</h3>
                        <h4 class="card-subtitle mb-2 text-muted h6">Écrit le {{ post.createdAt|date('d\/m\/Y \à H\\hi') }} par {{ post.AuthorFirstname }}</h4>
                        <p class="card-text">{{ markdown(post.excerpt) }}</p>
                        <p class="text-end mb-0">
                            <a href="/article/show/{{ post.pkid }}/" class="link-primary stretched-link">Lire la suite</a>
                        </p>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

    <div class="d-grid gap-2 d-md-block text-center">
        <a class="btn btn-primary mt-3" href="/le-blog/">Voir tous les articles</a>
    </div>

    <hr/>

    <h2 id="me-contacter" class="h4">Me contacter</h2>

    <div id="contact" class="col-12">
        <p>Un projet à me proposer, une demande d'informations ? N'hésitez pas à me contacter par email en renseignant le formulaire ci-dessous !</p>

        {% include 'template-parts/website-contactform.part.twig' %}
    </div>

{% endblock content %}





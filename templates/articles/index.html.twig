{% extends 'layout.html.twig' %}

{% block content %}

    <h1>Nos articles</h1>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        {% for article in articles %}
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h3 class="card-title h5">{{ article.getTitle }}</h3>
                        <h4 class="card-subtitle mb-2 text-muted h6">Écrit le {{ article.getCreatedAt|date('d\/m\/Y \à H\\hi') }} par {{ article.getAuthorName }}</h4>
                        <p class="card-text">{{ article.getMarkdownExcerpt }}</p>
                        <a href="/article/show/{{ article.getId }}/" class="btn btn-outline-primary">Lire la suite</a>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock content %}
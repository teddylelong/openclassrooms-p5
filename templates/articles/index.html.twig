{% extends 'layout.html.twig' %}

{% block content %}

    <h1>Nos articles</h1>

    {% for article in articles %}

        <h2>{{ article.getTitle }}</h2>
        <small>Écrit le {{ article.getCreatedAt|date('d\/m\/Y \à H\\hs') }} par {{ article.getAuthorName }}</small>
        <p>{{ article.getMarkdownExcerpt }}</p>
        <a href="/article/show/{{ article.getId }}/">Lire la suite</a>

    {% endfor %}

{% endblock content %}
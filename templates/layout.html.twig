<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/assets/css/main.css" rel="stylesheet">
    <title>Teddy Lelong | {{ pageTitle }}</title>
</head>

<body class="website">
    {% block body %}

        <!-- Top Header -->
        {% include 'template-parts/website-top-header.part.twig' %}

        <!-- Header + Nav -->
        {% include'template-parts/website-header.part.twig' %}

        <!-- Main content -->
        <div id="site-background" class="container-fluid p-0">
            <main id="main-content" class="container px-4 py-3 shadow">

                <div class="row">

                    <div class="col-12 col-md-8">
                        {{ notificationDisplay() }}

                        {% block content %}
                        {% endblock content %}
                    </div>

                    <aside id="website-sidebar" class="col-12 col-md-4 border rounded mt-3 mt-md-0 p-0">
                        <h5 class="border-bottom p-2">Widgets</h5>
                    </aside>

                </div>

            </main>
        </div>

        <!-- Footer -->
        {% include 'template-parts/website-footer.part.twig' %}

    {% endblock body %}

    <script src="/assets/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>